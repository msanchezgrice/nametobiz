{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cp package.deploy.json package.json && npm install --legacy-peer-deps && npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "NPM_CONFIG_PACKAGE_MANAGER": "npm",
    "NIXPACKS_NODEJS_VERSION": "20",
    "NIXPACKS_NO_PNPM": "true"
  }
}